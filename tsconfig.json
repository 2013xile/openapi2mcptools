{
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ESNext",
    "isolatedModules": true,
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "dist",
    "noEmitOnError": true,
    "lib": [
      "esnext"
    ],
    "baseUrl": "./"
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "include": [
    "lib/**/*.ts"
  ]
}
